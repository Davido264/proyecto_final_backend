{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "watch": true,
    "skipLibCheck": true
  }
}
